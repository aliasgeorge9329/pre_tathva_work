    <nav class="navbar-complete">
      <div class="brand-title">
        <a href="#"><h1>Wall of Sustainability</h1></a>
      </div>
      <div class="navbar-links">
        <ul>
          <li><a href="/logout">Logout</a></li>
        </ul>
      </div>
    </nav>

    <body>
      <br><br>
      <div class="container">
        <% if(err_msg == "saved") { %>
          <div class ="alert alert-success">
            <%="Saved Successfully"%>
          </div>
        <%} %>
        <a href="/print" target="_blank" style="margin:0 80% 0; " ><button class="btn btn-success">Click here to print all data</button></a><br>
        <form class="" action="/admin" method="post">
          <div class="form-group">
            
            <h2 style="font-family: 'Times New Roman', Times, serif; color: red;"><u>Tick the sentence which you feel Good</u></h2>
            <h4>Be carefull while ticking. Once accepted the quote user will be alert via email</h4>
            <br><br><br>
          
        <%  user.forEach(function(user_data){ if (user_data.sentence != null && user_data.status != "accepted" && user_data.status != "rejected") {%>
           

          <input type="checkbox" name=<%=user_data._id%>>
          <label><h3><%=user_data.sentence%></h3> </label>
          <br>
      
          <% };}) %>

<br>
          <button class="btn btn-primary" type="submit" name="button">Confirm</button>
      </form>

        </div>
        

        <a
      class="btn btn-danger"
      data-toggle="collapse"
      href="#Collapse_"
      role="button"
      aria-expanded="false"
      style="margin:15cm 40% 0; "
      >Delete Already accepted Sentence</a
    ><br><br>
    <div class="collapse multi-collapse" id="Collapse_">
      <div class="card card-body">
        <div class="modify_accepted">
          <form class="" action="/modify_accepted" method="post">
            <div class="form-group">
  
              <h2 style="font-family: 'Times New Roman', Times, serif; color: red;"><u>Tick the sentence to remove</u></h2>
              <br><br><br>
            
          <%  user.forEach(function(user_data){ if (user_data.status == "accepted") {%>
             
  
            <input type="checkbox" name=<%=user_data._id%>>
            <label><h3><%=user_data.sentence%></h3> </label>
            <br>
        
            <% };}) %>
  
  <br>
            <button class="btn btn-primary" type="submit" name="button">Confirm</button>
        </form>

  
          </div>
        </div>     
      </div>  
      </div>
    </div>

</div>
</body>
